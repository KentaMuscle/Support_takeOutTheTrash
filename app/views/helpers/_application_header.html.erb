<header>
  <nav class="header">
    <!-- user_signed_in? はユーザがログインしているか調べるdeviseのHelperメソッド -->
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'プロフィール変更', edit_user_registration_path, class: "logging_links" %>
      <%= link_to "ログアウト", destroy_user_session_path, :method => :delete, class: "logging_links"%>
    <% else %>
      <%= link_to "サインイン", new_user_registration_path, class: "logging_links" %>
      <%= link_to "ログイン", new_user_session_path, class: "logging_links" %>
      <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, class: "logging_links" %>
    <% end %>
  </nav>
</header>